<h1><%= title %></h1>
    <p>
        <span>
            <form action="/update/<%=todo._id%>" method="post" accept-charset="utf-8">
                <input type="text" name="content" value="<%= todo.content %>" />
                <input type="submit" value="Submit">
            </form>

        </span>
        <span>
            <a href="/destroy/<%= todo._id %>" title="Delete this todo item">Delete</a>
        </span>
    </p>    
